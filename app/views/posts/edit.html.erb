<h1>Editing Post</h1>

<div class="row">
	<div class="col-2"></div>
	<div class="col-8">
		<%= form_for @post, url: {action: "update"}, html: {class: "form-group"} do |f| %>
		  <div class="field">
			  <%= f.label :title %><br />
			  <%= f.text_field :title, class: "form-control" %>
		  </div>
		  <div class="field">
		  	  <%= f.label :content %><br />
		  	  <%= f.text_area :content, class: "form-control"%>
		  </div>
		  <%= f.hidden_field :user_id, value: current_user.id%>
		  <%= f.submit "Post", class: "btn btn-primary" %>
		  <%= link_to 'Back', posts_path %>
		<% end %>
	</div>
	<div class="col-2"></div>
</div>

